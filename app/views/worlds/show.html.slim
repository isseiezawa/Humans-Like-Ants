h1.text-center.mt-3.mb-3
  span
    = "#{@world.place_ja} (#{@world.place})"
    / id属性tweet-from
#world-room-form
  == render 'world_rooms/form', { world: @world, world_room: @world_room}
== render 'world_rooms/search_form', { world: @world }
h3.text-center
  = t('.title')
.container-fluid.vh-100.overflow-auto.px-3.py-2.text-center
  - if @world_rooms.present?
    table.table.table-striped.table-hover
      thead
        tr
          th
            = WorldRoom.human_attribute_name(:id)
          th
            = WorldRoom.human_attribute_name(:name)
          th
            = t('.tweet_amount')
      == render partial: 'worlds/world_rooms', locals: { world_rooms: @world_rooms }
      #pagenate
        = paginate @world_rooms
  - else
    = image_tag 'ant_gif.gif'
    .small = t('.no_room')
