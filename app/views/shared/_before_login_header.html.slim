              = t('worlds.index.title')
            ul.dropdown-menu[aria-labelledby="navbarDropdownMenuLink"]
              li
                = link_to '東京', '#', class: 'dropdown-item'
              li
                = link_to '千葉', '#', class: 'dropdown-item'
